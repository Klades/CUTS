// $Id$

project {
  requires += jni
  
  specific {
    javah       = $(JAVA_HOME)/bin/javah
    javah_dep   = $(JAVA_HOME)/bin/javah
    javah_flags = -jni 
  } 
  
  Define_Custom (JNI) {
    automatic         = 0
    command           = $(JAVA_HOME)/bin/javah
    dependent         = $(JAVA_HOME)/bin/javah
    commandflags      = -jni
    header_outputext  = .h

    keyword javah_flags = commandflags
  }
}
