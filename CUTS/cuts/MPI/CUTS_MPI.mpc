// $Id$

project (CUTS_MPI) : mpich, ciao_servant_dnc, cutslib {
  sharedname    = CUTS_MPI
  dynamicflags += CUTS_MPI_BUILD_DLL

  //== dependencies
  libs  += CUTS_stub Benchmark_Data_Collector_stub CUTS_BDC
  after += CUTS_stub Benchmark_Data_Collector_stub CUTS_BDC

  specific (nmake, vc6, vc7, vc71, vc8, vc9) {
    link_options += /DEF:mpi_export.def
  }

  Source_Files {
    mpi.cpp

    MPI_Env.cpp
  }

  Header_Files {
    mpi_export.def
  }
}
