<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<project name="formatlog.build" basedir="." default="build">
  <property name="tempfile" value="${logdir}/temp-log.xml" />

  <target name="build">
    <xslt in="${logdir}/${logfile}" out="${tempfile}" extension=".xml" style="xsl/update-messages.xsl" />
    <move file="${tempfile}" tofile="${logdir}/${logfile}" />
  </target>
</project>
