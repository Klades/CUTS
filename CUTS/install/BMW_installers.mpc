// $Id$

project (BMW) : wix {
  after += CUTS.Data

  prebuild = \
    aspnet_compiler -v CUTS -p $(CUTS_ROOT)/utils/BMW/website -f \
      -u -fixednames $(CUTS_ROOT)/bin/BMW

  specific {
    wix_flags += -ext WixUIExtension -ext WixIisExtension
    light_flags += -ext WixUIExtension -ext WixIisExtension -cultures:en-us
  }

  Wxs_Files {
    BMW.wxs
  }
}
